
<div id="contents">
  <h1> <%= t('general.login') %> </h1>

  <%= form_tag session_path do %>
    <div class="field">
      <%= label_tag t('views.users.email') %><br />
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag t('views.users.password') %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag t('general.login') %> <%= t('general.or') %> <%= link_to t('general.register'), new_user_path %>
    </div>
  <% end %>
  
  
</div>