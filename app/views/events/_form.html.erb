<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :artist_tokens, "Artists" %><br />
    <%= f.text_field :artist_tokens, "data-pre" => @event.artists.to_json %>
	<p>Artist missing? Click <%= link_to "here!", new_artist_path %></p>
  </div>
  <div class="field">
    <%= f.label :venue_token, "Venue" %><br />
    <%= f.text_field :venue_token, "data-pre" => "["+@event.venue.to_json+"]" %>
	<p>Venue missing? Click <%= link_to "here!", new_venue_path %></p>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </div>
  <div class="actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>
