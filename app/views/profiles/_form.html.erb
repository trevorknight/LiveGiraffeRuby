<%= form_for(@profile) do |f| %>  <% if @profile.errors.any? %>    <div id="error_explanation">      <h2><%= t('general.there_is_an_error') %></h2>      <ul>      <% @profile.errors.full_messages.each do |msg| %>        <li><%= msg %></li>      <% end %>      </ul>    </div>  <% end %>  <div class="field">    <%= f.label t('views.profiles.name') %><br />    <%= f.text_field :name %>  </div>  <div class="actions">    <%= submit_or_cancel(f) %>  </div><% end %>