<%= render "new_venues" %>

<div id="contents">
    
  <h1><%= t('general.all_venues') %></h1>

  <table>
    <tr>
      <th><%= t('views.venues.name') %></th>
      <th><%= t('views.venues.address') %></th>
    </tr>

  <% @venues.each do |venue| %>
    <tr>
      <td><%= link_to venue.name, venue %></td>
      <td><%= venue.address %></td>
    </tr>
  <% end %>
  </table>

  <br />

</div>