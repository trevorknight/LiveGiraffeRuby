<div id="contents">
  <p>
    <h2><%= @venue.name %></h2>
  <p>
    <h3><%= link_to @venue.address, "http://maps.google.com/?q=loc:#{@venue.address}" %></h3>
  <p>
    <h3><%= number_to_phone(@venue.phone) %></h3>
  <p>
    <ul><% if @venue.events.any? %>
      <b><%= t('views.venues.upcoming_artists') %></b>
      <% @venue.events.upcoming.each do |event| %>
        <li><% if event.artists.any? %><% event.artists.each do |artist| %><%= link_to artist.name, event %><br> <% end %><% end %></li>
      <% end %>
    <% end %></ul>
    <%= link_to t('views.venues.website'), @venue.website %>
  </p>

  <% if @venue.owned_by? current_user %>
    <%= link_to t('general.edit'), edit_venue_path(@venue) %>
  <% end %>
</div>